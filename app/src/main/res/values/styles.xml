<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconPadding">@dimen/icon_text</item>
        <item name="iconGravity">textStart</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="PageTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="MediumTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SmallTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SwitcherStyle" >
        <item name="android:layout_gravity">start</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SmallMediumTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_medium_text_size</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SmallestTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/smallest_text_size</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorSurface</item>
    </style>
    
    <style name="SettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/icon_text</item>
        <item name="paddingStart">0dp</item>
        <item name="iconTint">?attr/colorSurface</item>
        <item name="android:textFontWeight">400</item>
        <item name="buttonStyle">?attr/borderlessButtonStyle</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="EditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:drawablePadding">@dimen/icon_text</item>
        <item name="drawableTint">?attr/colorSecondaryVariant</item>
        <item name="android:paddingStart">@dimen/icon_padding</item>
        <item name="android:paddingEnd">@dimen/icon_padding</item>
        <item name="android:textColorHint">?attr/colorSecondaryVariant</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorOnSecondaryFixed</item>
    </style>

    <style name="EditTextButtonStyle" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="tint">?attr/colorSecondaryVariant</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="StandartButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="cornerRadius">@dimen/big_radius</item>
        <item name="android:textAppearance">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_width">@dimen/progress_dp</item>
        <item name="android:layout_height">@dimen/progress_dp</item>
        <item name="android:gravity">center</item>
        <item name="android:indeterminateTint">?attr/colorAccent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabSelectedTextColor">?attr/colorOnPrimary</item>
        <item name="android:layout_marginHorizontal">@dimen/medium_margin</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="tabTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BottomNavViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextAppearanceActive">@style/BNVTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BNVTextAppearance</item>
    </style>

    <style name="BNVTextAppearance">
        <item name="android:textSize">@dimen/very_small_text_size</item>
        <item name="android:textAppearance">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>


    
</resources>